<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="40dp"
            android:gravity="center|bottom"
            >
            <View
                android:id="@+id/view_bubble_01"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_empty_oval_pin"/>
            <View
                android:id="@+id/view_bubble_02"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_empty_oval_pin"
                android:layout_marginLeft="10sp"/>
            <View
                android:id="@+id/view_bubble_03"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_empty_oval_pin"
                android:layout_marginLeft="10sp"/>
            <View
                android:id="@+id/view_bubble_04"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_empty_oval_pin"
                android:layout_marginLeft="10sp"/>
            <View
                android:id="@+id/view_bubble_05"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_empty_oval_pin"
                android:layout_marginLeft="10sp"/>
            <View
                android:id="@+id/view_bubble_06"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/bg_view_empty_oval_pin"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp">
                </Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:text="6"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="7"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="8"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:text="9"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="Forgot?"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"></Button>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:text="delete"></Button>
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/checklistButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:text="Back" />
    <TextView
        android:id="@+id/ChecklistTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="Checklist Tips"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/checklistButtonBack"
        android:textSize="24dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/SmokingTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="Smoking Tips"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/ChecklistTips"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SmokingRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SmokingTips"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/CosleepingTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="Co-Sleeping Tips"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/SmokingRecycler"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/CoSLeepingRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CosleepingTips"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/StandardTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:text="Standard Tips"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/CoSLeepingRecycler"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/StadardRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/StandardTips"
        android:visibility="visible"/>
    <Button
        android:id="@+id/suggestedAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/baseline_add_24"
        android:text="add"
        />


</RelativeLayout>
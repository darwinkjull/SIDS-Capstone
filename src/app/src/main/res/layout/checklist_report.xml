<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reportsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/returnFromReportsButton"
        android:layout_centerInParent="true"
        android:text="Checklist Completion Tracking"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:layout_alignParentEnd="true"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/layout_frame"
        android:spinnerMode="dropdown"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/profile_select_reports" />

    <Button
        android:id="@+id/returnFromReportsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:text="Back"
        android:textSize="11sp" />

    <!-- Title of Checklist -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/checklistChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/reportGraphTitle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checklistChart"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Date and Time"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/reportGraphTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reportsTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Percent Complete (%)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/ExportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Details"
        android:textSize="11sp" />
</RelativeLayout>
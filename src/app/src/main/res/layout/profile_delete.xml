<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="@dimen/margin_standard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/deletionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete This Profile?"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deletionTitle"
            android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/deletionTrueButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Yes, Delete It"
            android:textSize="16dp"
            android:backgroundTint="@color/black"
            android:layout_marginHorizontal="@dimen/margin_standard"/>
        <Button
            android:id="@+id/deletionFalseButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/deletionTrueButton"
            android:text="No, Go Back"
            android:textSize="16dp"
            android:layout_marginHorizontal="@dimen/margin_standard"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
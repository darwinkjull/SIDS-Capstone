<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_header">

        <!--Swipe Refresh Layout -->

        <Button
            android:id="@+id/returnFromProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:text="Back"
            android:textSize="12sp" />

        <!-- Title of Checklist -->
        <TextView
            android:id="@+id/checklistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Profile Management "
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="24sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_header"
        android:layout_marginHorizontal="@dimen/margin_standard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/profileNameHeader"
            android:text="Selected Profile: "
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginEnd="@dimen/margin_standard"
            android:gravity="center"/>

        <EditText
            android:id="@+id/newProfileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileNameHeader"
            android:background="@null"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:hint="Name"
            android:textSize="24sp"
            android:height="32dp"/>

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/newProfileText"
            android:drawableLeft="@drawable/new_person_icon"
            android:text="Edit Baby Profile" />

        <Button
            android:id="@+id/deleteProfileButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/editProfileButton"
            android:text="Delete Baby Profile"
            android:drawableLeft="@drawable/new_person_icon"
            />

        <Button
            android:id="@+id/addProfileButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/deleteProfileButton"
            android:text="Add New Baby"
            android:drawableLeft="@drawable/new_person_icon"
            />
    </RelativeLayout>



</RelativeLayout>